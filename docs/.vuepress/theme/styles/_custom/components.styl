// 
// Image
// 
.image
  &.is-circle
    img
      border-radius: 50%


// 
// Box
// 
.box
  & > p
    display inline-block
    vertical-align middle
    &:nth-of-type(n+2)
      margin-left: 1rem

// 
// Columns
// 
.columns
  margin-bottom 1rem
  display: -webkit-flex
  display: flex
  flex-wrap: wrap
  & > .column.is-4
    width: 33%
  & > .column.is-6
    width: 50%

// 
// tag
// 
.tag
  align-items: center
  background-color: #fff
  border-radius: 3px
  color: #4a4a4a
  display: inline-flex
  font-size: 0.75rem
  height: 2em
  justify-content: center
  line-height: 1.5
  padding-left: 0.75em
  padding-right: 0.75em
  white-space: nowrap
  &.is-outline
    border: solid 1px #363636
  &.is-rounded
    border-radius: 290486px
  & + .tag
    margin-left: .2rem

// 
// Button
// 
.button
    display: inline-flex
    border-radius: .3rem
    padding: 0.8rem
    text-align: center
    background-color: $textColor
    border-color: $textColor
    color: #fff
    &:hover
      background-color: lighten($textColor, 10%)
    &.is-circle
      border-radius: 10rem;


@media (max-width: $MQMobile)
  .columns > .column
    width: 100% !important