@import url('https://fonts.googleapis.com/css?family=Lobster');

// showing default values
$accentColor = #3eaf7c
$textColor = #2c3e50
$borderColor = #eaecef
$codeBgColor = #282c34


.navbar {
    border-top: 3px solid #42b983;
    .site-name {
        font-family: 'Lobster', cursive;
    }
}

.box {
    & > p {
        display inline-block;
        vertical-align middle;

        &:nth-of-type(n+2) {
            margin-left: 1rem;
        }
    }
}

.image {
    &.is-circle {
        img {
            border-radius: 50%;
        }
    }
}

// 
// Home
// 
.home {
    .hero {
        padding: 1rem;

        h1 {
            font-family: 'Lobster', cursive;
        }
    }
}